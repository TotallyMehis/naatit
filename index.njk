<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Naatit</title>
        <meta name="description" content="kun et muista miten ne heitetään...">
        <meta name="author" content="Miikka Ylätalo">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="site.css"> 
        <script src="site.js"></script> 
    </head>
    <body lang="fi">
        <div class="front">
            <div class="container">
                <div class="title-container">
                    <h1><a href="#">Naatit</a></h1>
                </div>
                <div class="flavor">
                    <p>kun et muista miten ne heitetään...</p>
                </div>
                <ul class="map-list">
                    {% for map in maps %}
                        <li>
                            <a href="#{{ map.name }}">{{ map.name }}</a>
                            <ul>
                                {% for video in map.videos %}
                                    <li><a href="#{{ map.name }}/{{ video.id }}">{{ video.title }}</a></li>
                                {% endfor %}
                            </ul>
                        </li>

                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="container">
            {% for map in maps %}
                <div class="title-container">
                        <h2 id="{{ map.name }}">{{ map.name }}</h2>
                        <span class="link-container">
                            <span class="link"><a href="#{{ map.name }}">&#x1f517;</a></span>
                        </span>
                </div>
                {% for video in map.videos %}
                    <div class="mapvideo-container">
                        <div class="title-container">
                            <h3 id="{{ map.name }}/{{ video.id }}">{{ video.title }}</h3>
                            <span class="link-container">
                                <span class="link"><a href="#{{ map.name }}/{{ video.id }}">&#x1f517;</a></span>
                            </span>
                        </div>
                        {% if video.thumbnail %}
                            <div class="video-container" data-video="{{ video.full }}">
                                <video loop autoplay muted playsinline preload="auto" class="thumbnail" src="{{ video.thumbnail }}" width="1920">
                                    Video ei toimi sun selaimella &#x3a;&#x28;
                                    {% if video.full %}
                                        <a href="{{ video.full }}">Lataa tästä</a>
                                    {% endif %}
                                </video>
                                {% if video.full %}
                                    <div class="play-button">&#x25B6;</div>
                                {% endif %}
                            </div>
                            {% if video.video_comment %}
                                <p class="comment">{{ video.video_comment }}</p>
                            {% endif %}
                        {% endif %}
                        {% if video.external %}
                            <div class="external"><a href="{{ video.external }}" target="_blank" rel="noreferrer">{{ video.external }}</a></div>
                        {% endif %}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </body>
</html>
